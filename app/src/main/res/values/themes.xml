<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POMSKP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryLight</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="android:textColor">@color/onLightBackground</item>
        <item name="colorOnBackground">@color/onLightBackground</item>
    </style>

    <style name="Theme.POMSKP.NoActionBar" parent="Theme.POMSKP">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="android:textColor">@color/onLightBackground</item>
        <item name="colorOnBackground">@color/onLightBackground</item>
    </style>

    <style name="Theme.POMSKP.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="android:textColor">@color/onLightBackground</item>
        <item name="colorOnBackground">@color/onLightBackground</item>
    </style>

    <style name="Theme.POMSKP.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />
</resources>